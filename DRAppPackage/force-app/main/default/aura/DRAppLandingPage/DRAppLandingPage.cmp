<aura:component controller="DRAppDataCache" implements="force:appHostable,flexipage:availableForAllPageTypes">
    
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    
    <!-- basic static landing page with style="height:100vh;background-image: url(/resource/background3);" -->
    <div class="slds-box slds-theme_shade" style="height:100vh;background-color: white;">
    <div class="slds-align--absolute-center slds-p-bottom_xx-large slds-p-right_xx-small slds-p-left_xx-small slds-p-top_large slds-p-bottom_large">
        <img src="{!$Resource.DMGLogo}"/>
    </div>
    <div class="slds-text-align_center slds-text-heading_small slds-p-top_xx-large slds-text-color_weak">     
		{!$Label.c.DRAPPLandingPageText}
     </div>
        </div>
</aura:component>